
def suggest_clothing(temperature):
    if temperature >= 30:
        return "It's very hot! Wear light and breathable clothes."
    elif 20 <= temperature < 30:
        return "It's warm. Light clothes are fine."
    elif 10 <= temperature < 20:
        return "It's a bit cool. Wear a light jacket or pullover."
    else:
        return "It's cold! Wear warm clothes like a jacket or sweater."

# Ask the user to input the temperature
try:
    temp = float(input("Enter the current temperature in Â°C: "))
    suggestion = suggest_clothing(temp)
    print(suggestion)
except ValueError:
    print("Please enter a valid number for temperature.")