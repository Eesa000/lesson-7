base = int(input("Enter the base number: "))
print"(base, "in decimal is", base, "in binary is", bin(base), "in octal is", oct(base), "and in hexadecimal is", hex(base))
print("The binary representation of", base, "is", bin(base))
print("The octal representation of", base, "is", oct(base))
print("The hexadecimal representation of", base, "is", hex(base))
print("The decimal representation of", base, "is", base)
